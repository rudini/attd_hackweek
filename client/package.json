{
  "name": "client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "cypress:run",
    "cypress:open": "concurrently \"ng serve\" \"cypress open\"",
    "cypress:run": "cypress run",
    "cypress:ci": "ng build --prod && run-p --race start:ci cypress:run",
    "start:ci": "http-server ./dist/cypressTest -a localhost -p 8000 -c-1"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.0.0",
    "@angular/common": "~7.0.0",
    "@angular/compiler": "~7.0.0",
    "@angular/core": "~7.0.0",
    "@angular/forms": "~7.0.0",
    "@angular/http": "~7.0.0",
    "@angular/platform-browser": "~7.0.0",
    "@angular/platform-browser-dynamic": "~7.0.0",
    "@angular/router": "~7.0.0",
    "@ngrx/effects": "^6.1.0",
    "@ngrx/store": "^6.1.0",
    "@ngrx/store-devtools": "^6.1.0",
    "core-js": "^2.5.4",
    "decode-ts": "0.0.13",
    "import": "0.0.6",
    "io-ts": "^1.3.2",
    "io-ts-types": "^0.3.14",
    "ngrx-store-logger": "^0.2.2",
    "ngx-fp-ts": "0.0.2",
    "rxjs": "~6.3.3",
    "unionize": "^1.0.1",
    "url-join": "^4.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.0",
    "@angular/cli": "~7.0.3",
    "@angular/compiler-cli": "~7.0.0",
    "@angular/language-service": "~7.0.0",
    "@types/cucumber": "^4.0.4",
    "@types/jest": "^23.3.7",
    "@types/node": "~8.9.4",
    "@types/url-join": "^0.8.2",
    "codelyzer": "~4.5.0",
    "concurrently": "^4.0.1",
    "cypress": "^3.1.0",
    "http-server": "^0.11.2",
    "jest": "^23.6.0",
    "jest-marbles": "^2.0.0",
    "jest-preset-angular": "^6.0.1",
    "merge": "^2.1.1",
    "prettier": "^1.14.3",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./src/setup-jest.ts",
    "collectCoverage": true,
    "globals": {
        "ts-jest": {
            "tsConfigFile": "./src/tsconfig.spec.json"
        },
        "__TRANSFORM_HTML__": true
    },
    "moduleNameMapper": {
        "^@shared/(.*)": "<rootDir>/src/app/shared/$1",
        "^@teuerungsrechner/(.*)": "<rootDir>/src/app/teuerungsrechner/$1",
        "^@core/(.*)": "<rootDir>/src/app/core/$1"
    }
  }
}
